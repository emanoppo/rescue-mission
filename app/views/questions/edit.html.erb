<div class="row">
  <%- if @question.errors.present? -%>
    <div class="large-12 alert-box alert" data-alert>
      <ul>
        <%- @question.errors.full_messages.each do |error| -%>
          <li><%= error %></li>
        <%- end -%>
      </ul>
    </div>
  <%- end -%>

  <div class="large-12">
    <h1>Edit Question</h1>

    <%= form_for @question do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, :value => @question.title %>
    </br></br>

      <%= f.label :body %>
      <%= f.text_area :body, :value => @question.body %>
    </br></br>

      <%= f.submit "Edit Question" %>
    <%- end -%>

    <%if !current_user.nil? && User.find(@question.user_id).id == current_user.id %>
      <br>
      <%= link_to "Delete Question", question_path, method: :delete, data: { confirm: "Are you sure you want to delete this question?" } %>
    <% end %>
  </div>
</div>
